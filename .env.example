# Julius Wirth Drupal 7 Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration (Required for single-server setup)
DRUPAL_DB_NAME=juliuswirth
DRUPAL_DB_USER=juliuswirth  
DRUPAL_DB_PASSWORD=your_secure_database_password_here
DRUPAL_DB_HOST=mariadb

# Drupal Security (Required)
DRUPAL_HASH_SALT=your_64_character_random_hash_salt_here
BASE_URL=https://www.julius-wirth.com
DRUPAL_CRON_KEY=your_random_cron_key_here

# Redis Cache (Optional - for performance)
# Uncomment if you enable Redis in docker-compose.yml
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# AWS S3 File Storage (Optional)
# Uncomment if you want to use S3 for file storage
# AWS_S3_BUCKET=julius-wirth-public-files
# AWS_S3_PRIVATE_BUCKET=julius-wirth-private-files
# AWS_REGION=eu-south-1

# SMTP Email Configuration (Optional)
# Uncomment to enable email sending
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@julius-wirth.com

# Production Settings
ENVIRONMENT=production

# Security Note: Generate random values for:
# - DRUPAL_HASH_SALT: Use `openssl rand -hex 32`
# - DRUPAL_CRON_KEY: Use `openssl rand -hex 16`
# - Database passwords: Use strong, unique passwords