# Julius Wirth Production Environment Variables Template
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control

# Database Configuration
DB_NAME=julius_wirth_prod
DB_USER=your_db_username
DB_PASSWORD=your_secure_db_password
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=3306

# Drupal Security
DRUPAL_HASH_SALT=your_very_long_random_hash_salt_here
DRUPAL_CRON_KEY=your_cron_key_here

# Base URL
BASE_URL=https://www.julius-wirth.com

# Redis Cache
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=optional_redis_password

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=julius-wirth-files-prod
AWS_S3_PRIVATE_BUCKET=julius-wirth-files-private
AWS_CLOUDFRONT_DISTRIBUTION=your_cloudfront_id

# SMTP Email Configuration
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your_ses_username
SMTP_PASSWORD=your_ses_password
SMTP_FROM=noreply@julius-wirth.com

# Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
DATADOG_API_KEY=your_datadog_key

# Feature Flags
ENABLE_REDIS=true
ENABLE_S3=true
ENABLE_CDN=true
ENABLE_MONITORING=true

# Development/Staging Only
# Remove these in production
DEBUG_MODE=false
SHOW_ERRORS=false